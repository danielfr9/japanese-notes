---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Not Found">
  <main class="grow flex justify-center items-center">
    <div class="max-w-2xl p-8">
      <h1
        class="text-4xl font-bold text-center text-transparent bg-clip-text bg-gradient-to-r from-[#0B525B] to-[#006466] mb-4"
      >
        404 Not Found
      </h1>
      <p class="text-2xl font-light mb-8">
        The page your were looking for doesn't exist or was deleted.
      </p>
      <div class="flex justify-center">
        <a href="/">
          <button
            class="bg-[#0B525B] hover:bg-[#144552] text-white p-2 rounded-lg"
            >Go back home</button
          >
        </a>
      </div>
    </div>
  </main>
</Layout>
