---
import ChapterList from "@/components/ChapterList.astro";
import Layout from "@/layouts/RootLayout.astro";
import { getCollection } from "astro:content";

const allChapters = await getCollection("genki-1");
const chaptersLinks = allChapters.map((chapter) => ({
  slug: chapter.slug,
  title: chapter.data.title,
}));
---

<Layout title="Genki 1">
  <ChapterList
    title="Genki 1"
    subTitle="All Chapters"
    chapters={chaptersLinks}
    baseUrl="/genki-1"
  />
</Layout>
